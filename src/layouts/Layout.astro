---
interface Props {
  title: string;
}
import { Image } from "astro:assets";
import logo from "../images/logo.png";

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Image class="logo-wrapper" src={logo} alt="Bhagwati logo" format="avif" />
    <div class="app-wrapper">
      <slot />
    </div>
  </body>
</html>
<style is:global>
  @font-face {
    font-family: "RedHatDisplayBold";
    src: url("/fonts/RedHat/Display/Bold.ttf") format("truetype");
    font-weight: bolder;
    font-style: normal;
    font-display: swap;
  }
  @font-face {
    font-family: "RedHatDisplayMedium";
    src: url("/fonts/RedHat/Display/Medium.ttf") format("truetype");
    font-weight: bold;
    font-style: normal;
    font-display: swap;
  }
  @font-face {
    font-family: "RedHatTextRegular";
    src: url("/fonts/RedHat/Text/Regular.ttf") format("truetype");
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }
  @font-face {
    font-family: "RedHatTextBold";
    src: url("/fonts/RedHat/Text/Bold.ttf") format("truetype");
    font-weight: bolder;
    font-style: normal;
    font-display: swap;
  }
  @font-face {
    font-family: "RedHatMono";
    src: url("/fonts/RedHat/Text/Regular.ttf") format("truetype");
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }

  .heading {
    font-size: 5rem;
    margin-top: 0px;
    margin: 0px;
  }
  p {
    font-family: "RedHatText";
    margin: 0px;
  }
  .logo-wrapper {
    max-width: 256px;
    height: auto;
  }
  html {
    padding-left: 5vw;
    padding-right: 5vw;
  }

  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
  }
  html {
    max-width: 100vw;
    background: #f4f4f3;
  }
  h1,h2 {
    font-family: "RedHatDisplayBold";
    font-weight: bolder;
  }
  p{
    
    font-family: "RedHatTextRegular";
  }
  li{
    
    font-family: "RedHatTextRegular";
  }

</style>
