---
interface Props {
  title: string;
}
import { Image } from "astro:assets";
import logo from "../images/logo.png";

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Image class="logo-wrapper" src={logo} alt="Bhagwati logo" format="avif" />
    <div class="app-wrapper">
      <slot />
    </div>
  </body>
</html>
<style is:global>
  @font-face {
    font-family: "RedHatDisplay";
    src: url("/fonts/RedHatDisplayVariable.woff") format("woff");
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }

  .logo-wrapper {
    max-width: 256px;
    height: auto;
  }
  html {
    padding-left: 5vw;
    padding-right: 5vw;
  }

  /* Media query for desktop devices (768px and above) */

  .app-wrapper {
    border-left: 2px bloack solid;
  }
  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
  }
  html {
    max-width: 100vw;
    font-family: "RedHatDisplay";
    background: #f4f4f3;
  }
  h1 {
    font-weight: bolder;
  }
</style>
