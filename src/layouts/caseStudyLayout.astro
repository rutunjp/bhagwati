---
import { Image } from "astro:assets";
import Layout from "./Layout.astro";
import caseStudyImage from "../images/caseStudies/reliance/reliance.jpg";
import caseStudyImage2 from "../images/caseStudies/reliance/reliance2.jpg";
import caseStudyImage3 from "../images/caseStudies/reliance/reliance2.jpg";
const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title}>
  <div class="caseStudy-wrapper">
    <a class="goback-link" href="javascript:history.go(-1)"> Go back</a>

    <h1>{frontmatter.title}</h1>
    <div class="caseStudyImages-wrapper">
      <Image src={caseStudyImage} alt="caseStudy" />
      <Image src={caseStudyImage2} alt="caseStudy" />
      <Image src={caseStudyImage3} alt="caseStudy" />
    </div>
    <div class="details-wrapper">
      <slot />
    </div>
  </div>
</Layout>
<style>
  .goback-link {
    font-family: "RedHatTextRegular";
    font-size: 1.2rem;
    color: black;
    text-decoration: none;
    position: relative;
    transition: color 0.3s ease;
    opacity: 80%;
  }

  a::after {
    content: "";
    position: absolute;
    width: 100%;
    height: 2px;
    opacity: 80%;
    background-color: black;
    bottom: 0;
    left: 0;
    transition: transform 0.3s ease-in-out;
    transform: scaleX(1);
    transform-origin: bottom left;
  }

  * {
    background-color: #ebebeb;
  }

  .details-wrapper {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
  }
  @media only screen and (max-width: 768px) {
    .heading {
      font-size: 3rem;
      margin-top: 0px;
      margin: 0px;
    }
    .details-wrapper {
      display: grid;
      grid-template-columns: 1fr;
    }
  }
  .caseStudyImages-wrapper {
    width: fit-content;
    margin: auto;
  }
  .caseStudy-wrapper {
    padding: 1rem 2rem;
    width: 80%;
    margin: auto;
    margin-bottom: 12rem;
  }
  .goback-link {
    font-size: 0.8rem;
  }
</style>
