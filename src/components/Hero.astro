---
import { Image } from "astro:assets";

import welder from "../images/welder.png";
---

<div class="hero-wrapper">
  <div class="hero-text">
    <h1 class="hero-heading">Bhagwati<br />Industries</h1>
    <h2 class="hero-subheading">
      Forging Excellence, Shaping Tomorrow 40 Years of Metal Mastery
    </h2>
  </div>
  <div class="hero-cta">
    <Image class="hero-image" src={welder} alt="Welder" />
  </div>
  <nav class="nav-links">
    <ul>
      <li><a href="">Infrastructure</a></li>
      <li><a href="">Services</a></li>
      <li><a href="">Case Studies</a></li>
      <li><a href="">About Us</a></li>
    </ul>
  </nav>
</div>

<style>
  .nav-links {
    color: black;
    grid-area: nav-links;
    font-size: xx-large;
  }
  ul {
    margin-top: 0px;
    list-style: none;
  }
  .hero-wrapper {
    display: grid;
    width: 90vw;
    max-height: 90vh;
    grid-template-columns: 60vw auto;
    grid-template-rows: 1fr 40vh;
    grid-template-areas:
      "hero-text nav-links"
      "hero-cta hero-cta ";
    padding-top: 2rem;
    overflow: hidden;
  }
  @media only screen and (max-width: 767px) {
    .hero-wrapper {
      grid-template-columns: 90vw auto;
      grid-template-rows: 1fr 90vh;
    }

    .hero-wrapper {
      grid-template-areas:
        "hero-text hero-text"
        "hero-cta nav-links";
    }
  }

  .hero-cta {
    grid-area: hero-cta;
    overflow: hidden;
  }
  .hero-image {
    width: 100%;
    height: 120%;
    object-position: bottom;
    object-fit: cover;
    filter: grayscale(0.8);
    transition: 350ms;
  }
  .hero-image:hover {
    filter: grayscale(0);
    height: 130%;
  }

  .hero-subheading {
    margin: 0;
    font-size: 2rem;
  }
  .hero-heading {
    margin: 0;
    line-height: 1;
    font-size: 7rem;
  }

  .hero-text {
    grid-area: hero-text;
    display: flex;
    flex-direction: column;
    text-align: left;
  }
</style>
