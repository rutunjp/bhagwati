---
import { Image } from "astro:assets";

import logo from "../images/logo.png";
import welder from "../images/welder.png";
---

<div class="hero-wrapper">
  <div class="hero-content">
    <Image class="hero-logo" src={logo} alt="hero-logo" />
    <div>
      <Image class="hero-image" src={welder} alt="Welder" />
      <p class="hero-subheading">
        Forging excellence, shaping tomorrow, 40 Years of metal mastery
      </p>
    </div>
  </div>
</div>
<style>
  body {
    margin: 0;
    font-family: "RedHatDisplayMedium", sans-serif;
    background-color: #f4f4f3;
  }
  @media screen and (min-width: 767px) {
    .hero-logo {
      max-width: 50%;
      height: auto;
    }
  }

  .hero-text {
    display: flex;
  }
  .hero-wrapper {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    height: 100vh;
    margin: auto;
    overflow: hidden;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .hero-content {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    width: 70%;
  }
  .hero-image {
    height: 60vh;

    width: 100%;
    object-fit: cover;
    filter: grayscale(0.8);
    transition:
      filter 0.35s,
      height 0.35s;
  }

  .hero-image:hover {
    filter: grayscale(0);
  }

  .hero-subheading {
    font-size: 1.6rem;
    opacity: 1;
  }

  .hero-heading {
    margin: 0;
    line-height: 1;
    font-size: 5rem;
    color: #000; /* Set your desired text color */
    font-weight: bolder;
  }

  .hero-text {
    grid-area: hero-text;
    display: flex;
    flex-direction: column;
    text-align: left;
  }
  @media only screen and (max-width: 768px) {
    .hero-heading {
      font-size: 4rem;
      text-align: center;
    }
    .hero-wrapper {
      padding-top: 2rem;
      display: flex;
      flex-direction: column;
    }

    .hero-subheading {
      font-size: 1.5rem;
      letter-spacing: -0.5px;
      text-align: center;
    }
    .hero-logo {
      width: 100%;
      height: auto;
      margin: auto;
    }
    .hero-content {
      margin-top: auto;
      margin-bottom: auto;
      display: flex;
      flex-direction: column;
      gap: 3rem;
      width: 90%;
    }
  }
</style>
