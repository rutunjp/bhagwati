---
import { Image } from "astro:assets";
import RelianceWork from "../images/caseStudies/reliance/reliance.jpg";
const props = Astro.props;
---

<a href={`/caseStudies/${props.href}`}>
  <div class="card">
    <Image class="image" src={RelianceWork} alt="casestudy" />
    <h3>Reliance Work</h3>
    <p>Fabrication</p>
  </div>
</a>
<style>
  h3 {
    color: #d90000;
  }
  p {
    font-family: "RedHatMono";
    color: #5a5a5a;
  }
  .card {
    max-width: 300px;
    display: flex;
    flex-direction: column;
    align-items: start;
  }
  .image {
    object-fit: cover;
  }
  .card * {
    margin: 0;
  }
  @media screen and (max-width: 768px) {
    .card {
      margin: auto;
      max-width: 256px;
      display: flex;
      flex-direction: column;
      align-items: center;
      text-align: center;
    }
    .image {
      object-fit: cover;
    }
  }
</style>
